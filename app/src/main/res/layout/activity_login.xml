<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F29B"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#1B5E20" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/reciclaje" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="270dp"
        android:layout_height="89dp"
        android:fontFamily="@font/akronim"
        android:text="EcoRecicla"
        android:textColor="#1B5E20"
        android:textSize="72dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="Ingresa con:"
        android:textColor="#000000"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Correo-usuario-celular"
        android:inputType="text"
        android:textColorHint="@color/material_dynamic_neutral60" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/averia_gruesa_libre"
        android:text="Contrase침a"
        android:textColor="#000000"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Ingresa tu contrase침a"
        android:inputType="textPassword"
        android:textColor="#1B5E20"
        android:textColorHint="@color/material_dynamic_neutral60" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Olvide mi contrase침a"
        android:textColor="#1B5E20"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#1B5E20"
        android:text="INGRESAR"
        android:textColor="@color/white"
        android:textColorLink="@color/white" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Registrate ac치"
        android:textColor="#1B5E20"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:background="#1B5E20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="36dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/house_white_24dp" />

            <ImageView
                android:id="@+id/idProfile"
                android:layout_width="116dp"
                android:layout_height="56dp"
                android:backgroundTint="#A8C6FA"
                app:srcCompat="@drawable/face_white_24dp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="43dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/search_white_24dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="49dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/build_white_24dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>